<div data-controller="game" 
    data-game-gemstone-name="<%= @gemstone.name.downcase %>" 
    data-game-number="<%= @game.game_number %>"
    data-game-date = "<%= @game.date %>"
    >
  <div class="flex flex-col items-center text-white min-h-screen py-10 rounded-2xl shadow-2xl
      h-full w-full 
      bg-gray-800 
      bg-clip-padding backdrop-filter backdrop-blur bg-opacity-15 saturate-100 backdrop-contrast-100
    ">

    <h1 class="text-4xl font-extrabold dark:text-dark text-slate-900">
      Game #<%= @game.game_number %>
    </h1>

    <div class="p-4 rounded-lg">
      <%= image_tag @gemstone.image_url, alt:"gem-image", class: "rounded mb-4 w-full max-w-xl max-h-xl object-cover border" %>

      <div class="flex justify-center mb-4" data-game-target="attemptsButtonsContainer">
        <% (1..5).each do |i| %>
          <button data-game-target="attemptButton" class="text-white font-bold py-2 p-3 px-4 mx-1 rounded bg-slate-800" disabled><%= i %></button>
        <% end %>
      </div>

      <p class="mb-4 text-center text-xl" data-game-target="guessesRemaining"></p>

      <form data-game-target="guessForm" data-action="submit->game#submitGuess" class="flex flex-col items-center mb-4">
        <input type="text" placeholder="Search for a Gem..." class="w-full max-w-md p-2 rounded border border-gray-700 mb-2 bg-gray-700 text-white" data-game-target="guessInput">
        <button type="submit" data-game-target="submitButton" class="w-full max-w-md bg-green-500 hover:bg-green-400 text-white font-bold py-2 px-4 rounded">Submit</button>
      </form>

      <div class="flex flex-col justify-center items-center w-full" data-game-target="attemptsList">
      </div>

    </div>
  </div>
</div>
